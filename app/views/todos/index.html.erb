<p id="notice"><%= notice %></p>

<h1>Todos</h1>
<table>
  <thead>
    <tr>
      <th>Index</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @todos.each do |todo| %>
      <tr>
        <td><%= todo %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<button  data-reflex="click->Example#add_todo" data-count="<%= @todos.count%>">
  Next Todo
</button>


<button  data-reflex="click->Example#remove_todo" data-count="<%= @todos.count%>">
  Remove Todo
</button>
